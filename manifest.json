{
  "manifest_version": 3,
  "name": "Amazon Unaffiliate",
  "version": "1.0",
  "description": "Removes affiliate tags and query parameters from Amazon links before accessing them",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "webNavigation",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.amazon.com/*", 
    "*://*.amazon.co.jp/*", 
    "*://*.amazon.co.uk/*", 
    "*://*.amazon.de/*", 
    "*://*.amazon.fr/*", 
    "*://*.amazon.it/*", 
    "*://*.amazon.es/*", 
    "*://*.amazon.ca/*",
    "*://*.amzn.to/*",
    "*://*.amzn.asia/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
